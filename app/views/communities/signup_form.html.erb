<%= form_tag "/signup" do |f| %>
  <% if @member.errors.any? %>
  <div id="form-errors">
    <h2><%= pluralize(@member.errors.count, "error") %> caused this signup to fail:</h2>

    <ul>
    <% @member.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div id="form-fields">
    <div class="form-field">
      <%= label_tag 'member[name]', 'Name' %>
      <%= text_field_tag 'member[name]', nil, :required => true %>
    </div>
    <div class="form-field">
      <%= label_tag 'member[email]', 'Email' %>
      <%= email_field_tag 'member[email]', nil, :required => true %>
    </div>
    <div class="form-field">
      <%= label_tag 'member[phone_number]', 'Phone number' %>
      <%= telephone_field_tag 'member[phone_number]', nil, :required => true %>
    </div>
  </div>

  <%# store the community id so we can create a member later %>
  <%= hidden_field_tag :community_id, @community.slug, :required => true %>

  <div class="actions">
    <%= submit_tag 'Sign Up' %>
  </div>
<% end %>

