<%= form_for [:admin2, @community], {:html => {:class => "form-horizontal"}} do |f| %>
  <div class="control-group">
    <%= f.label :leader_first_name, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :leader_first_name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :leader_last_name, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :leader_last_name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :coleader_last_name, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :coleader_last_name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :coleader_last_name, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :coleader_last_name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :kind_list, "Kinds", :class => "control-label" %>
      <% Community::MC_KINDS.each do |kind, description| %>
    <div class="controls">
        <label class="checkbox inline">
          <%= check_box_tag "community[kind_list][]", kind, @community.kind_list.include?(kind.to_s) %>
          <%= description %>
        </label>
    </div>
      <% end %>
  </div>
  <div class="control-group">
    <%= f.label :campus, :class => "control-label" %>
    <div class="controls">
      <%= f.select :campus, options_for_select(Community::CAMPUSES.map { |k, v| [v, k] }, @community.campus) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :host_day, "Day", :class => "control-label" %>
    <div class="controls">
      <%= f.select :host_day, options_for_select(Community::DAYS.map { |d| [d.titleize, d] }, @community.host_day) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, "E-mail", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :address_line_1, :placeholder => "5 Elm St" %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.text_field :address_line_2 %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.text_field :address_city, :placeholder => "City" %>
      <%= f.text_field :address_postal, :placeholder => "Zip", :class => "input-small" %>
    </div>
  </div>
  <div class="control-group">
    <div class="form-actions">
      <%= f.submit :class => "btn btn-primary" %>
      <%= f.submit "Cancel", :name => :cancel, :class => "btn" %>
    </div>
  </div>
<% end %>
