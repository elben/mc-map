<div id="communities">
  <div class="row">
    <div class="span12">
    </div>
  </div>
  <% content_for :data_table_search_left do %>
    <%= link_to "New Community", new_admin2_community_path, class: "btn" %>
  <% end %>
  <%= render "admin2/shared/data_table_search" %>

  <div class="row">
    <div class="span12">
      <table class="table communities">
        <thead>
          <tr>
            <th></th>
            <th>Leader</th>
            <th>Campus</th>
            <th>Day</th>
            <th>Kinds</th>
            <th>E-mail</th>
            <th>Members</th>
            <th>Hidden</th>
          </tr>
        </thead>
        <% @communities.each do |c| %>
          <tr>
            <td><%= link_to "View", admin2_community_path(c) %></td>
            <td><%= c.leader %></td>
            <td><%= c.campus_name %></td>
            <td><%= c.host_day.titleize %></td>
            <td class="mc-kind"><%= (@taggings_hash[c.id] || []).join(", ") %></td>
            <td><%= c.email %></td>
            <td><%= @members_count[c.id].to_i %></td>
            <td><% if c.hidden? %><span class="label hidden-community">Hidden</span><% end %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
