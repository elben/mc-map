<section id="map"></section>

<div id="search">
  <div class="filters">
    <input id="input-search" type="text" placeholder="Search" />

    <%# checkboxes for the various filters we're allowing %>
    <h2>Day</h2>
    <% Community::DAYS.each do |day| %>
      <%= render partial: 'checkbox_filter', locals: {
        value: day,
        name: 'day',
        display_text: day.titleize,
        checked: true
      } %>
    <% end %>

    <%# checkboxes for the various filters we're allowing %>
    <h2>Campus</h2>
    <% Community::CAMPUSES.each do |campus, display_text| %>
      <%= render partial: 'checkbox_filter', locals: {
        value: campus,
        name: 'campus',
        display_text: display_text,
        checked: true
      } %>
    <% end %>

    <%# checkboxes for the various filters we're allowing %>
    <h2>Kind</h2>
    <% Community::MC_KINDS.each do |mc_kind, display_text| %>
      <%= render partial: 'checkbox_filter', locals: {
        value: mc_kind,
        name: 'kind',
        display_text: display_text,
        checked: true
      } %>
    <% end %>
  </div>

  <ul></ul>
</div>
